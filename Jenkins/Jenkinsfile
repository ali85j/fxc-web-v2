pipeline {
    agent any

    stages {
        stage('Get Dependencies') {
            steps {
                echo 'Building..'
                sh '''
                node -v
                npm -v
                rm node_modules.tar.gz
                wget https://github.com/ali85j/fxc-web-v2/blob/master/node_modules.tar.gz
                tar -pzxf node_modules.tar.gz
                '''
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '''
                npm run test
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}